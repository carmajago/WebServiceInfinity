@model WebServiceInfinity.Models.ViaLactea

@{
    ViewBag.Title = "Nebulosas de Via Lactea";
}

<center>
    <h2>VÍA LACTEA:  @Html.DisplayFor(model => model.nombre)</h2>
    
        <a class="btn btn-success btn-sm" href="@Url.Action("Create", "Nebulosas",new { Model.id })">
            Agregar Nebulosas
        </a>
    
</center>


<h3 class="text-center">Nebulosas</h3>
<table class="table table-bordered table-striped">

    <tr>
        <th>
            Nombre
        </th>
        <th>
            Total Sist.Planetarios
        </th>
        <th>
            Opción
        </th>
        
    </tr>
    @foreach (var item in Model.Nebulosas)
    {
        
        <tr>
            <td>
                @item.nombre
            </td>
            <td>
                @item.sistemasPlanetarios.Count Sistema(s)
            </td>

            
            <td>
                <a class="btn btn-info btn-sm" href='@Url.Action("Details", "Nebulosas",new { id = item.id})'>
                    <span class="glyphicon glyphicon-info-sign"></span> Datos Nebulosa
                </a>
                @Html.ActionLink("Eliminar Nebulosa", "Delete", new { id = item.id })
            </td>
        </tr>
       
    }
</table>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
