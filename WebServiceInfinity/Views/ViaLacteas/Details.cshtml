@model WebServiceInfinity.Models.ViaLactea

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ViaLactea</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Via Lactea
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

    </dl>
</div>

<h3 class="text-center">Nebulosas</h3>
<table class="table table-bordered table-striped">

    <tr>
        <th>
            Nombre
        </th>
        <th>
            Opción
        </th>
        
    </tr>
    @foreach (var item in Model.Nebulosas)
    {


        <tr>
            <td>
                @item.nombre
            </td>

            
            <td>
                <a class="btn btn-info btn-sm" href='@Url.Action("Details", "Nebulosas",new { id = item.id})'>
                    <span class="glyphicon glyphicon-info-sign"></span> Datos Nebulosa
                </a>
            </td>
        </tr>

    }
</table>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
